<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.best.limingxing.best.activity.MainActivity">

    <RelativeLayout
        android:id="@+id/rlayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true">

        <RadioGroup
            android:id="@+id/rg_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

        <RadioButton
            android:id="@+id/weixin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/selector_weixin"
            android:gravity="center"
            android:onClick="onCheckedChange"
            android:text="微信"
            android:checked="true"
            android:textColor="@drawable/main_button_text_color"
            android:textSize="18sp"/>

        <RadioButton
            android:id="@+id/tongxunlu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/selector_tongxunlu"
            android:gravity="center"
            android:onClick="onCheckedChange"
            android:text="通讯录"
            android:textColor="@drawable/main_button_text_color"
            android:textSize="18sp"/>
            <RadioButton
                android:id="@+id/faxian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/selector_faxian"
                android:gravity="center"
                android:onClick="onCheckedChange"
                android:text="发现"
                android:textColor="@drawable/main_button_text_color"
                android:textSize="18sp"/>
            <RadioButton
                android:id="@+id/me"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/selector_me"
                android:gravity="center"
                android:onClick="onCheckedChange"
                android:text="我"
                android:textColor="@drawable/main_button_text_color"
                android:textSize="18sp"/>

        </RadioGroup>
    </RelativeLayout>
        <View
            android:id="@+id/id_xian"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@id/rlayout"
            android:layout_marginBottom="5dp"
            android:background="#2f2f29" />

        <RelativeLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/id_xian">
    </RelativeLayout>
</RelativeLayout>
